<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainpage"
    tools:context="com.example.sara.biblio.main_page">


    <Button
        android:id="@+id/catalogo"
        android:background="@mipmap/ca"
        android:elevation="1dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:layout_width="135dp"
        android:layout_height="135dp" />

    <Button
        android:id="@+id/prenota"
        android:background="@mipmap/pren"
        android:layout_below="@+id/catalogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_width="135dp"
        android:layout_height="135dp" />

    <Button
        android:id="@+id/feedback"
        android:background="@mipmap/fee"
        android:layout_height="135dp"
        android:layout_width="135dp"
        android:layout_below="@+id/prenota"
        android:layout_alignLeft="@+id/catalogo"
        android:layout_alignStart="@+id/catalogo"
        android:layout_marginTop="13dp" />


</RelativeLayout>
